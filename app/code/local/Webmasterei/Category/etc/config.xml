<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Webmasterei_Category>
        <!-- Make sure that the version number matches the filename on your install script! -->
        <version>0.0.2</version>
    </Webmasterei_Category>
</modules>
<global>
<resources>
    <custom_category>
        <setup>
            <module>Webmasterei_Category</module>
            <!-- This next line is absolutely critical so that we call the appropriate setup class -->
            <class>Mage_Catalog_Model_Resource_Setup</class>
            <connection>
                <use>core_setup</use>
            </connection>
        </setup>
    </custom_category>
    <custom_category_write>
        <connection>
            <use>core_write</use>
        </connection>
    </custom_category_write>
    <custom_category_read>
        <connection>
            <use>core_read</use>
        </connection>
    </custom_category_read>
</resources>
</global>
        </config>